{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://richmove.co.uk/schemas/FxQuoteRequest.schema.json",
  "title": "FxQuoteRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["baseCurrency", "quoteCurrency", "amount"],
  "properties": {
    "baseCurrency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "description": "ISO 4217 currency code for base currency"
    },
    "quoteCurrency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "description": "ISO 4217 currency code for quote currency"
    },
    "amount": {
      "type": "number",
      "minimum": 0.01,
      "description": "Amount to convert (minimum 0.01)"
    },
    "clientId": {
      "type": "string",
      "maxLength": 64,
      "description": "Optional client identifier"
    },
    "correlationId": {
      "type": "string",
      "maxLength": 64,
      "description": "Optional correlation ID for tracking"
    }
  }
}